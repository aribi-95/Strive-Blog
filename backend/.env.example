# Porta del server backend
PORT=4000

# Connessione a MongoDB (URI completo)
MONGODB_CONNECTION_URI=your_mongodb_connection_uri_here

# Cloudinary (per upload immagini)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Email SMTP (per notifiche o reset password)
EMAIL_HOST=your_smtp_host_here
EMAIL_PORT=587
EMAIL_USER=your_email_user_here
EMAIL_PASSWORD=your_email_password_here

# JWT (token secret per autenticazione)
JWT_SECRET=your_jwt_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_PATH=/api/v1/callback-google

BACKEND_HOST=http://localhost:4000
FRONTEND_HOST=http://localhost:5173
